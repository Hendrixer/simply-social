body
  padding-top 40px
nav
  background-color primary
  height 60px
  color azure
  position fixed
  top 0
  left 0
  width 100%
  z-index 1000
  font-family ProximaNova, arial, sans-serif
  font-size 1.1em

  & .left
    float left
    margin-top 20px
    margin-left 20px

    & span
      color gray

  & .right
    position absolute
    right 0
    top 0
    margin-top 20px
    margin-right 20px

    & img
      border-radius 4px
      &:hover
        cursor pointer

    & *
      display inline-block
