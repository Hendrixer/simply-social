.modal-backdrop
  position absolute
  z-index 9999
  top 0
  left 0
  width 100%
  height 100%
  background-color black
  opacity 0.8

.modal-dialog
  z-index 10000
  position fixed
  width 50%
  height 220px
  top 35%
  left 50%
  transform translate(-50%, -50%)
  background-color darken($gray-lighter, 10%)
  box-shadow 4px 4px 80px #000
  padding $padding-large-vertical $padding-large-horizontal
  border-radius $border-radius-base

  & h4
    margin-top 2px

  & .text
    margin-bottom 20px
    font-size $font-size-lrg
  & .actions div:first-child
  & .actions div:nth-child(2)
    padding-top 5px
  & .actions div:nth-child(3)
    padding-left 70px
    & button
      width 80px

.modal-box
  width 25px
  height 25px
  position fixed
  z-index 10000
  top 13%
  left 78%
  transform translate(-50%, -50%)
  border-radius 100%
  background transparent
  border solid 2px $gray-light
  color $gray-light
  text-align center
  cursor pointer




.modal-content
  background-color white
  width 100%
  height 100px
  border-radius $border-radius-base

#new-message
  width 100%
  height 100%
  margin-bottom 0px
  outline none
  resize none
  border none
